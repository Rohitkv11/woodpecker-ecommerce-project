<body style="margin-top: 120px;">
    <header class="main_menu home_menu">
        <div class="container mt-4">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <a class="navbar-brand" href="/">
                            <h2>Wood Pecker</h2>
                        </a>
                        <div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
                            <ul class="navbar-nav">
                            </ul>
                        </div>
                        <div class="hearer_icon d-flex">
                            <a href="/wishlist"><i class="ti-heart" style="font-size: 1.5em"></i><span
                                    class="badge badge-success" id="wishlist-count">{{wishlistCount}}</span></a>
                            <a href="/cart"><i class="fas fa-cart-plus" style="font-size: 1.5em"></i><span
                                    class="badge badge-success" id="cart-count">{{cartCount}}</span>
                            </a>
                            {{#if user}}
                            <div>
                                <a class="text-dark p-4" href="/profile">My Account</a>
                                <a class="text-dark p-4" href="/orders">My Orders</a>
                                <a class="text-dark p-4" href="/logout">Logout</a>
                            </div>
                            {{else}}
                            <div><a class="text-dark p-4  " href="/login"> Login</i></a></div>
                            {{/if}}
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>


    <div class="container rounded bg-white mt-5 mb-5" style="margin-top: 300px;">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5"
                        width="150px"
                        src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span
                        class="font-weight-bold">{{details.username}}</span><span
                        class="text-black-50">{{details.email}}</span><span> </span></div>
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <form action="/addprofile" method="post">
                        <div class="row mt-2">
                            <div class="col-md-12"><label class="labels">Name</label><input type="text" name="username"
                                    class="form-control" placeholder="first name" value="{{details.username}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels">Mobile Number</label><input type="text"
                                    name="phonenumber" class="form-control" placeholder="enter phone number"
                                    value="{{details.mobilenumber}}"></div>
                            <div class="col-md-12"><label class="labels">Email ID</label><input type="text" name="email"
                                    class="form-control" placeholder="enter email id" value="{{details.email}}"></div>
                            <div class="col-md-12"><label class="labels">House Name</label><input type="text"
                                    name="house_name" class="form-control" placeholder="enter house name"
                                    value="{{details.housename}}"></div>
                            <div class="col-md-12"><label class="labels">Pincode</label><input type="number"
                                    name="pincode" class="form-control" placeholder="enter pincode"
                                    value="{{details.pincode}}"></div>
                            <div class="col-md-12"><label class="labels">Area</label><input type="text" name="area"
                                    class="form-control" placeholder="enter area" value="{{details.area}}"></div>
                            <div class="col-md-12"><label class="labels">City</label><input type="text" name="city"
                                    class="form-control" placeholder="enter city" value="{{details.city}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6"><label class="labels">State/Region</label><input type="text"
                                    name="state" class="form-control" value="{{details.state}}" placeholder="state">
                            </div>
                            <div class="col-md-6"><label class="labels">Country</label><input type="text" name="country"
                                    class="form-control" placeholder="country" value="{{details.country}}"></div>
                        </div>
                        <div class="mt-5 text-center"><input class="btn btn-primary profile-button" type="submit"
                                value="Save Profile"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {{>user-footer}}
</body>